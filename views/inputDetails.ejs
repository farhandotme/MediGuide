<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <form
      id="hospitalForm"
      action="/create"
      method="POST"
      enctype="multipart/form-data"
      class="max-w-xl mx-auto p-6 bg-white rounded-lg shadow-md space-y-4"
    >
      <h2 class="text-2xl font-semibold text-center mb-4">Add New Hospital</h2>

      <div>
        <label for="name" class="block text-gray-700 font-medium mb-1"
          >Hospital Name:</label
        >
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="phoneNo" class="block text-gray-700 font-medium mb-1"
          >Phone Number:</label
        >
        <input
          type="number"
          id="phoneNo"
          name="phoneNo"
          required
          class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="address" class="block text-gray-700 font-medium mb-1"
          >Address:</label
        >
        <textarea
          id="address"
          name="address"
          rows="2"
          required
          class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        ></textarea>
      </div>

      <div id="treatments" class="space-y-4">
        <div class="treatment p-4 bg-gray-50 rounded-lg">
          <label
            for="treatmentName"
            class="block text-gray-700 font-medium mb-1"
            >Treatment Name:</label
          >
          <input
            type="text"
            name="treatmentName"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
      </div>

      <button
        type="button"
        onclick="addTreatment()"
        class="w-full py-2 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 transition"
      >
        Add New Treatment
      </button>

      <div>
        <label for="profile" class="block text-gray-700 font-medium mb-1"
          >Profile Picture:</label
        >
        <input
          type="file"
          id="file"
          name="image"
          class="w-full px-4 py-2 border border-gray-300 rounded-md"
        />
      </div>

      <button
        type="submit"
        class="w-full py-2 bg-green-500 text-white font-semibold rounded-md hover:bg-green-600 transition"
      >
        Save Hospital
      </button>
    </form>

    <script>
      function addTreatment() {
        const treatmentsDiv = document.getElementById("treatments");
        const newTreatment = document.createElement("div");
        newTreatment.classList.add(
          "treatment",
          "p-4",
          "bg-gray-50",
          "rounded-lg",
          "space-y-2"
        );
        newTreatment.innerHTML = `
        <label class="block text-gray-700 font-medium mb-1">Treatment Name:</label>
        <input type="text" name="treatmentName[]" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
      `;
        treatmentsDiv.appendChild(newTreatment);
      }
    </script>
  </body>
</html>