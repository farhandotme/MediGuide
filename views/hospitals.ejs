<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MEDIGUIDE</title>



  <!-- Add Font Awesome for search icon -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


  <!-- Bootstrap CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Link CSS-->
  <link href="/stylesheets/style.css" rel="stylesheet">
  <!-- Link Swiper's CSS -->
  <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  <header>
    <div class="logo">
      <h1><i class="fas fa-stethoscope"></i> MEDIGUIDE</h1>
    </div>
    <nav>
      <ul>
        <li><a href="#home">Home</a></li>
        <li><a href="#about">About</a></li>
        <li><a href="#Hospital">Hospitals</a></li>
        <li><a href="#contact-form">Contact Us</a></li>
      </ul>
    </nav>
  </header>

  <!-- Hero Section -->
  <section class="hero" id="home" style="background-image: url(../Images/Bg1.png);">
    <h2>Welcome to a Healthier You</h2>
    <p>Your journey to a healthier lifestyle starts here.</p>
    <a href="#about" class="btn">Learn More</a>
  </section>

  <!-- Search Bar Section -->
  <form  action="/search" method="post">
    <div class="search-bar">
      <div class="search-container">
        <input type="text" name="treatment" id="search-query" placeholder="Type your disease... ">
        <button type="submit" id="search-btn"><i class="fa fa-search"></i></button>
      </div>
      <p class="search-hint">Search for finding the right hospital for a particular illness!</p>
    </div>
  </form>


  <!-- Search Results Section (Will be populated dynamically) -->
  <section class="search-results" id="search-results">
    <div class="container mx-auto p-4">
      <% if (message) { %>
        <p class="text-center text-lg text-gray-700"><%= message %></p>
      <% } else { %>
        <h4 class="text-center text-2xl font-bold mb-6">
          Search Results for "<b><%= treatment %></b>"
        </h4>
        
        <div class="flex flex-wrap gap-6 justify-start">
          <% hospitals.forEach((hospital) => { %>
            <div
              class="bg-white border border-gray-200 rounded-lg shadow-lg transform transition duration-300 hover:scale-105 hover:shadow-2xl w-80"
            >
              <!-- Hospital Image -->
              <div class="relative">
                <% if (hospital.profile) { %>
                  <img
                    src="data:image/jpeg;base64,<%= hospital.profile.toString('base64') %>"
                    alt="<%= hospital.name %>"
                    class="object-cover w-full h-48 rounded-t-lg"
                  />
                <% } else { %>
                  <img
                    src="/images/default-hospital.jpg"
                    alt="Default Image"
                    class="object-cover w-full h-48 rounded-t-lg"
                  />
                <% } %>
                
              </div>
  
              <!-- Hospital Details -->
              <div class="p-4">
                <h5 class="text-lg font-bold text-gray-800 truncate">
                  <%= hospital.name %>
                </h5>
                <p class="text-sm text-gray-600 mt-1 truncate">
                  <%= hospital.address %>
                </p>
                <p class="text-blue-600 text-sm font-semibold mt-2">
                  Starting from: â‚¹<%= hospital.treatment[0]?.price || "N/A" %>
                </p>
                <span>Call +91 <%= hospital.phoneNo %></span>
              </div>
  
              <!-- Buttons for Links -->
              <div class="flex justify-between items-center bg-gray-100 p-4 rounded-b-lg">
                <button
                  class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition-all text-sm"
                  onclick="window.open('<%= hospital.link %>', '_blank')"
                >
                  Appointment
                </button>
                <button
                  class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition-all text-sm"
                  onclick="window.open('<%= hospital.mapLocation %>', '_blank')"
                >
                  Directions
                </button>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </section>
  
  

  <!-- Footer -->
  <footer class="site-footer">
    <hr>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-sm-6 col-xs-12">
          <p class="copyright-text">Copyright &copy; 2024 All Rights Reserved by
            <a href="https://www.instagram.com/hasibultarifahmed_/profilecard/?igsh=NWUycnJhazJnNmM1">Hasibul</a>.
          </p>
        </div>

        <div class="col-md-4 col-sm-6 col-xs-12">
          <ul class="social-icons">
            <li><a class="facebook" href="https://www.facebook.com/hasibultahmed"><i class="fa fa-facebook"></i></a>
            </li>
            <li><a class="twitter" href="https://snapchat.com/t/0IjydFzo"><i class="fa fa-snapchat"></i></a></li>
            <li><a class="dribbble" href="https://www.instagram.com/h4si.ta"><i class="fa fa-instagram"></i></a></li>
            <li><a class="linkedin" href="https://www.linkedin.com/in/hasibultarifahmed"><i
                  class="fa fa-linkedin"></i></a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>


  <!-- Swiper JS -->
  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  <script src="./javascripts/swiper.js"></script>

</body>

</html>